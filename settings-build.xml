<?xml version="1.0" encoding="UTF-8"?>

<settings xmlns="http://maven.apache.org/SETTINGS/1.0.0"
          xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
          xsi:schemaLocation="http://maven.apache.org/SETTINGS/1.0.0 http://maven.apache.org/xsd/settings-1.0.0.xsd">

  <localRepository>/tmp/local-repo</localRepository>
  <mirrors>
    <mirror>
      <id>local</id>
      <mirrorOf>*</mirrorOf>
      <url>http://gateway.spmm-automation.svc.cluster.local/api/content/maven/group/local</url>
    </mirror>
  </mirrors>
  <profiles>
    <profile>
      <id>internal-resolve</id>

      <repositories>
        <repository>
          <id>indy-infra</id>
          <releases>
            <enabled>true</enabled>
          </releases>
          <snapshots>
            <enabled>true</enabled>
          </snapshots>
          <url>http://gateway.spmm-automation.svc.cluster.local/api/content/maven/group/local</url>
        </repository>
      </repositories>

      <pluginRepositories>
        <pluginRepository>
          <id>indy-infra</id>
          <releases>
            <enabled>true</enabled>
          </releases>
          <snapshots>
            <enabled>true</enabled>
          </snapshots>
          <url>http://gateway.spmm-automation.svc.cluster.local/api/content/maven/group/local</url>
        </pluginRepository>
      </pluginRepositories>
    </profile>

    <profile>
      <id>internal-deploy</id>

      <properties>
        <altReleaseDeploymentRepository>
          indy::default::http://gateway.spmm-automation.svc.cluster.local/api/content/maven/hosted/local-deployments/
        </altReleaseDeploymentRepository>
        <altSnapshotDeploymentRepository>
          indy::default::http://gateway.spmm-automation.svc.cluster.local/api/content/maven/hosted/local-deployments/
        </altSnapshotDeploymentRepository>
      </properties>
    </profile>
  </profiles>

  <activeProfiles>
    <activeProfile>internal-resolve</activeProfile>
    <activeProfile>internal-deploy</activeProfile>
  </activeProfiles>
  <pluginGroups>
    <pluginGroup>org.apache.maven.plugins</pluginGroup>
    <pluginGroup>org.codehaus.mojo</pluginGroup>
  </pluginGroups>
</settings>